<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <resource-ref>
        <description>MySQL Connection</description>
        <res-ref-name>jdbc/Productos</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>ControladorServlet</servlet-name>
        <servlet-class>cl.disma.cl.emedpro.ControladorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BloquesServlet</servlet-name>
        <servlet-class>cl.disma.cl.emedpro.controller.BloquesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservaServlet</servlet-name>
        <servlet-class>cl.disma.cl.emedpro.controller.ReservaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccesoMedicoServlet</servlet-name>
        <servlet-class>cl.disma.cl.emedpro.controller.AccesoMedicoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorServlet</servlet-name>
        <url-pattern>/ControladorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BloquesServlet</servlet-name>
        <url-pattern>/BloquesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservaServlet</servlet-name>
        <url-pattern>/ReservaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccesoMedicoServlet</servlet-name>
        <url-pattern>/AccesoMedicoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
